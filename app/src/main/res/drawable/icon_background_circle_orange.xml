<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ombre portée -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#40000000"/>
            <size
                android:width="64dp"
                android:height="64dp"/>
        </shape>
    </item>
    
    <!-- Fond principal -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#FF9800"
                android:endColor="#F57C00"
                android:angle="45"/>
            <size
                android:width="64dp"
                android:height="64dp"/>
        </shape>
    </item>
    
    <!-- Effet de brillance supérieur -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:height="1dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#99FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="0"/>
            <size
                android:width="64dp"
                android:height="64dp"/>
        </shape>
    </item>
    
    <!-- Effet de brillance latéral -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:width="1dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#66FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90"/>
            <size
                android:width="64dp"
                android:height="64dp"/>
        </shape>
    </item>
</layer-list>