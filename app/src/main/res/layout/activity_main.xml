<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Professional Top App Bar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/top_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:contentInsetStart="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/app_logo"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/wallet"
                        android:contentDescription="Logo de l'application"
                        android:background="@drawable/logo_background_orange"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bonjour,"
                            android:textSize="14sp"
                            android:textColor="#9E9E9E"
                            android:alpha="0.8" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thomas Dupont"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_notifications"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:icon="@drawable/ic_notifications"
                        app:iconTint="#E0E0E0"
                        android:contentDescription="Bouton Notifications"
                        app:backgroundTint="#2b2b2b"
                        app:cornerRadius="12dp"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_profile"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:icon="@drawable/account"
                        app:iconTint="#E0E0E0"
                        android:contentDescription="Bouton profile"
                        app:backgroundTint="#2b2b2b"
                        app:cornerRadius="12dp"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp" />
                </LinearLayout>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Premium Balance Card with Professional Design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/balance_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_bar_layout"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="#333333">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:background="@drawable/premium_card_background">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/balance_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solde disponible"
                        android:textSize="16sp"
                        android:textColor="#9E9E9E"
                        android:layout_weight="1" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PREMIUM"
                        android:textColor="#FF9800"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:chipBackgroundColor="#33FF9800"
                        app:chipStrokeWidth="1dp"
                        app:chipStrokeColor="#66FF9800" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:id="@+id/balance_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DT 0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_weight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_toggle_balance"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:icon="@drawable/ic_visibility"
                        app:iconTint="#E0E0E0"
                        android:contentDescription="Afficher/Masquer le solde"
                        app:backgroundTint="#2b2b2b"
                        app:cornerRadius="12dp"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BetaCoin"
                            android:textSize="14sp"
                            android:textColor="#9E9E9E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#333333"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dépenses"
                            android:textSize="14sp"
                            android:textColor="#9E9E9E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FF5252" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Action Buttons - Professional Design -->
        <LinearLayout
            android:id="@+id/action_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_section"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_receive_money"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:icon="@drawable/ic_receive"
                    app:iconTint="#FFFFFF"
                    app:iconSize="24dp"
                    android:contentDescription="Recevoir"
                    app:backgroundTint="#FF9800"
                    app:cornerRadius="16dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recevoir"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_send_money"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:icon="@drawable/ic_send"
                    app:iconTint="#FFFFFF"
                    app:iconSize="24dp"
                    android:contentDescription="Envoyer"
                    app:backgroundTint="#2b2b2b"
                    app:strokeColor="#FF9800"
                    app:strokeWidth="2dp"
                    app:cornerRadius="16dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Envoyer"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_use_balance"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:icon="@drawable/ic_use"
                    app:iconTint="#FFFFFF"
                    app:iconSize="24dp"
                    android:contentDescription="Profiter"
                    app:backgroundTint="#2b2b2b"
                    app:strokeColor="#FF9800"
                    app:strokeWidth="2dp"
                    app:cornerRadius="16dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profiter"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_transaction_history"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:icon="@drawable/ic_history"
                    app:iconTint="#FFFFFF"
                    app:iconSize="24dp"
                    android:contentDescription="Historique"
                    app:backgroundTint="#2b2b2b"
                    app:strokeColor="#FF9800"
                    app:strokeWidth="2dp"
                    app:cornerRadius="16dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historique"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0" />
            </LinearLayout>
        </LinearLayout>

        <!-- NEW: Financial Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/financial_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_buttons"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="#333333">


        </com.google.android.material.card.MaterialCardView>

        <!-- Analytics Card with Orange Accent -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/analytics_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/financial_summary"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="#333333">


        </com.google.android.material.card.MaterialCardView>

        <!-- NEW: Financial Goals Section -->

        <!-- Vouchers Section - Premium Black & Orange Design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/goals_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/analytics_section"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-12dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeColor="#333333"
            app:strokeWidth="1dp"></com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/voucher_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals_section"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Vos vouchers"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/see_all_vouchers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voir tout"
                    android:textSize="14sp"
                    android:textColor="#FF9800"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Horizontal ScrollView for vouchers -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Food Voucher Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="280dp"
                        android:layout_height="160dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        android:layout_marginEnd="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/food_voucher_background_orange"
                            android:padding="20dp">


                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_restaurant"
                                android:contentDescription="Food icon"
                                android:background="@drawable/icon_background_circle_white"
                                android:padding="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Food vouchers"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_centerVertical="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentBottom="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Solde disponible"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:alpha="0.7" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="€ 150.00"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="**** 1234"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Transport Voucher Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="280dp"
                        android:layout_height="160dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        android:layout_marginEnd="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#2b2b2b"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_transport"
                                android:contentDescription="Transport icon"
                                android:background="@drawable/icon_background_circle_orange"
                                android:padding="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transport vouchers"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_centerVertical="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentBottom="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Solde disponible"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:alpha="0.7" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="€ 75.00"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="**** 5678"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FF9800"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Shopping Voucher Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="280dp"
                        android:layout_height="160dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#2b2b2b"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_use"
                                android:contentDescription="Shopping icon"
                                android:background="@drawable/hip_background_orange"
                                android:padding="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shopping vouchers"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_centerVertical="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentBottom="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Solde disponible"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:alpha="0.7" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="€ 200.00"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="**** 9012"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FF9800"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- Recent Transactions Section - Professional Black & Orange Design -->
        <LinearLayout
            android:id="@+id/recent_transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/voucher_section"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Transactions récentes"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/see_all_transactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voir tout"
                    android:textSize="14sp"
                    android:textColor="#FF9800"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Transaction Item 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="#333333"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#161616"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_use"
                        android:contentDescription="Shopping icon"
                        android:background="@drawable/transaction_icon_background"
                        android:backgroundTint="#33FF9800"
                        android:padding="12dp"
                        app:tint="#FF9800"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
