<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:contentScrim="#161616"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleMarginStart="120dp"
            app:expandedTitleMarginBottom="24dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.ProfileTitle"
            app:collapsedTitleTextAppearance="@style/TextAppearance.ProfileTitle.Collapsed"
            app:title="Mon Profil">

            <!-- Background with gradient overlay -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/iv_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background"
                    android:contentDescription="Arrière-plan du profil" />

                <!-- Gradient overlay for better text visibility -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_overlay" />
            </FrameLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Personal Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#333333"
                app:cardBackgroundColor="#161616"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informations Personnelles"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Full Name Field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_person"
                                android:background="@drawable/icon_background_circle_orange"
                                android:padding="8dp"
                                app:tint="@android:color/white"
                                android:contentDescription="Icône de personne" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nom Complet"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp" />

                            <!-- Default View (Read-only) -->
                            <FrameLayout
                                android:id="@+id/container_name_readonly"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="John Doe"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:padding="8dp" />
                            </FrameLayout>

                            <!-- Edit View (Initially Hidden) -->
                            <FrameLayout
                                android:id="@+id/container_name_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxBackgroundColor="#222222"
                                    app:boxStrokeColor="#FF9800"
                                    android:textColorHint="#9E9E9E"
                                    app:hintTextColor="#FF9800">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textPersonName"
                                        android:textColor="@android:color/white"
                                        android:hint="Entrez votre nom complet" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </FrameLayout>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_edit_name"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_edit"
                            android:background="@drawable/icon_background_circle_dark"
                            android:padding="12dp"
                            app:tint="#FF9800"
                            android:contentDescription="Modifier le nom" />
                    </LinearLayout>

                    <!-- Email Field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_email"
                                android:background="@drawable/icon_background_circle_orange"
                                android:padding="8dp"
                                app:tint="@android:color/white"
                                android:contentDescription="Icône d'email" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp" />

                            <!-- Default View (Read-only) -->
                            <FrameLayout
                                android:id="@+id/container_email_readonly"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tv_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="john.doe@example.com"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:padding="8dp" />
                            </FrameLayout>

                            <!-- Edit View (Initially Hidden) -->
                            <FrameLayout
                                android:id="@+id/container_email_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxBackgroundColor="#222222"
                                    app:boxStrokeColor="#FF9800"
                                    android:textColorHint="#9E9E9E"
                                    app:hintTextColor="#FF9800">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textEmailAddress"
                                        android:textColor="@android:color/white"
                                        android:hint="Entrez votre email" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </FrameLayout>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_edit_email"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_edit"
                            android:background="@drawable/icon_background_circle_dark"
                            android:padding="12dp"
                            app:tint="#FF9800"
                            android:contentDescription="Modifier l'email" />
                    </LinearLayout>

                    <!-- Phone Field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_phone"
                                android:background="@drawable/icon_background_circle_orange"
                                android:padding="8dp"
                                app:tint="@android:color/white"
                                android:contentDescription="Icône de téléphone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Numéro du téléphone"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp" />

                            <!-- Default View (Read-only) -->
                            <FrameLayout
                                android:id="@+id/container_phone_readonly"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tv_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="+216 12 345 678"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:padding="8dp" />
                            </FrameLayout>

                            <!-- Edit View (Initially Hidden) -->
                            <FrameLayout
                                android:id="@+id/container_phone_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxBackgroundColor="#222222"
                                    app:boxStrokeColor="#FF9800"
                                    android:textColorHint="#9E9E9E"
                                    app:hintTextColor="#FF9800">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_phone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="phone"
                                        android:textColor="@android:color/white"
                                        android:hint="Entrez votre numéro de téléphone" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </FrameLayout>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_edit_phone"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_edit"
                            android:background="@drawable/icon_background_circle_dark"
                            android:padding="12dp"
                            app:tint="#FF9800"
                            android:contentDescription="Modifier le numéro de téléphone" />
                    </LinearLayout>

                    <!-- Birth Date Field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_birth_date"
                                android:background="@drawable/icon_background_circle_orange"
                                android:padding="8dp"
                                app:tint="@android:color/white"
                                android:contentDescription="Icône de date de naissance" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date de Naissance"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp" />

                            <!-- Default View (Read-only) -->
                            <FrameLayout
                                android:id="@+id/container_birth_date_readonly"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tv_birth_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="01/01/1990"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:padding="8dp" />
                            </FrameLayout>

                            <!-- Edit View (Initially Hidden) -->
                            <FrameLayout
                                android:id="@+id/container_birth_date_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxBackgroundColor="#222222"
                                    app:boxStrokeColor="#FF9800"
                                    android:textColorHint="#9E9E9E"
                                    app:hintTextColor="#FF9800">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_birth_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="none"
                                        android:focusable="false"
                                        android:clickable="true"
                                        android:textColor="@android:color/white"
                                        android:hint="JJ/MM/AAAA" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </FrameLayout>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_edit_birth_date"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_edit"
                            android:background="@drawable/icon_background_circle_dark"
                            android:padding="12dp"
                            app:tint="#FF9800"
                            android:contentDescription="Modifier la date de naissance" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Wallet Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_wallet_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#333333"
                app:cardBackgroundColor="#161616"
                app:layout_constraintTop_toBottomOf="@id/card_personal_info">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informations de PorteFeuille"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Username Field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_person"
                                android:background="@drawable/icon_background_circle_orange"
                                android:padding="8dp"
                                app:tint="@android:color/white"
                                android:contentDescription="Icône de personne" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Username"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp" />

                            <!-- Default View (Read-only) -->
                            <FrameLayout
                                android:id="@+id/container_username_readonly"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tv_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="johndoe"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:padding="8dp" />
                            </FrameLayout>

                            <!-- Edit View (Initially Hidden) -->
                            <FrameLayout
                                android:id="@+id/container_username_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxBackgroundColor="#222222"
                                    app:boxStrokeColor="#FF9800"
                                    android:textColorHint="#9E9E9E"
                                    app:hintTextColor="#FF9800">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_username"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        android:textColor="@android:color/white"
                                        android:hint="Entrez votre nom d'utilisateur" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </FrameLayout>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_edit_username"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_edit"
                            android:background="@drawable/icon_background_circle_dark"
                            android:padding="12dp"
                            app:tint="#FF9800"
                            android:contentDescription="Modifier le nom d'utilisateur" />
                    </LinearLayout>

                    <!-- User ID Field (Read-only) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_id"
                                android:background="@drawable/icon_background_circle_orange"
                                android:padding="8dp"
                                app:tint="@android:color/white"
                                android:contentDescription="Icône d'identifiant" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID (Non modifiable)"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_user_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="123456"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:background="#222222"
                                android:padding="8dp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Transaction Code Field (Read-only) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_qr"
                                android:background="@drawable/icon_background_circle_orange"
                                android:padding="8dp"
                                app:tint="@android:color/white"
                                android:contentDescription="Icône de code QR" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Code de transaction (Non modifiable)"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_reception_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ABCD1234"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:background="#222222"
                                android:padding="8dp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_show_qr"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_qr"
                            android:background="@drawable/icon_background_circle_dark"
                            android:padding="12dp"
                            app:tint="#FF9800"
                            android:contentDescription="Afficher le code QR" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Security Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#333333"
                app:cardBackgroundColor="#161616"
                app:layout_constraintTop_toBottomOf="@id/card_wallet_info">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paramètres de Sécurité"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Change Password Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_change_password"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Changer le mot de passe"
                        android:textColor="@android:color/white"
                        app:backgroundTint="#2b2b2b"
                        app:strokeColor="#FF9800"
                        app:strokeWidth="1dp"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_lock"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white"
                        android:layout_marginBottom="16dp" />

                    <!-- Biometric Authentication Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_fingerprint"
                            android:background="@drawable/icon_background_circle_orange"
                            android:padding="8dp"
                            app:tint="@android:color/white"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="Icône d'empreinte digitale" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Authentification biométrique"
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Utiliser l'empreinte digitale pour se connecter et confirmer les transactions"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_biometric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="@color/couche3"
                            app:trackTint="@color/couche3" />
                    </LinearLayout>

                    <!-- Transaction Notifications Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_notifications"
                            android:background="@drawable/icon_background_circle_orange"
                            android:padding="8dp"
                            app:tint="@android:color/white"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="Icône de notifications" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notifications de transaction"
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recevoir des notifications pour toutes les activités du compte"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_notifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="@color/couche2"
                            app:trackTint="@color/couche2" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Action buttons for when editing a field -->
    <LinearLayout
        android:id="@+id/layout_edit_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#161616"
        android:visibility="gone"
        android:layout_gravity="bottom">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Annuler"
            android:textColor="@android:color/white"
            app:backgroundTint="#2b2b2b"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Enregistrer"
            android:textColor="@android:color/white"
            app:backgroundTint="#FF9800"
            app:cornerRadius="12dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>