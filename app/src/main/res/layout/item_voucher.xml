<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#333333"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#161616"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/voucher_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_restaurant"
            android:contentDescription="Voucher icon"
            android:background="@drawable/transaction_icon_background"
            android:backgroundTint="#33FF9800"
            android:padding="16dp"
            app:tint="#FF9800"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/voucher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher Restaurant"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/voucher_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valable dans plus de 500 restaurants"
                android:textSize="14sp"
                android:textColor="#9E9E9E"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/voucher_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Validité: 12 mois"
                android:textSize="12sp"
                android:textColor="#FF9800" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/voucher_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€ 50.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_buy_now"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Acheter"
                android:textAllCaps="false"
                app:backgroundTint="#FF9800"
                app:cornerRadius="8dp"
                android:textSize="12sp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>