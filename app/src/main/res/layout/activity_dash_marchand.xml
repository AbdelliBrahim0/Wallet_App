<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Professional Top App Bar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/top_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:contentInsetStart="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/app_logo"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/ic_store"
                        android:contentDescription="Logo de l'application"
                        android:background="@drawable/logo_background_orange"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Espace Marchand"
                            android:textSize="14sp"
                            android:textColor="#9E9E9E"
                            android:alpha="0.8" />

                        <TextView
                            android:id="@+id/merchant_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Café Parisien"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_notifications"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:icon="@drawable/ic_notifications"
                        app:iconTint="#E0E0E0"
                        android:contentDescription="Bouton Notifications"
                        app:backgroundTint="#2b2b2b"
                        app:cornerRadius="12dp"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_settings"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:icon="@drawable/ic_settings"
                        app:iconTint="#E0E0E0"
                        android:contentDescription="Bouton paramètres"
                        app:backgroundTint="#2b2b2b"
                        app:cornerRadius="12dp"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp" />
                </LinearLayout>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Balance Card with Professional Design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/balance_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_bar_layout"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="#333333">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:background="@drawable/premium_card_background">

                <!-- QR Code Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Votre QR Code"
                        android:textSize="16sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginBottom="16dp" />

                    <ImageView
                        android:id="@+id/iv_qr_code"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:contentDescription="QR Code du marchand"
                        android:background="@android:color/white"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scannez ce code pour effectuer un paiement"
                        android:textSize="14sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="16dp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Existing Balance Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/balance_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solde disponible"
                        android:textSize="16sp"
                        android:textColor="#9E9E9E"
                        android:layout_weight="1" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MARCHAND"
                        android:textColor="#FF9800"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:chipBackgroundColor="#33FF9800"
                        app:chipStrokeWidth="1dp"
                        app:chipStrokeColor="#66FF9800" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:id="@+id/textSolde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0.000 DT"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textSoldeHidden"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="**** DT"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_weight="1"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_toggle_balance"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:icon="@drawable/ic_visibility"
                        app:iconTint="#E0E0E0"
                        android:contentDescription="Afficher/Masquer le solde"
                        app:backgroundTint="#2b2b2b"
                        app:cornerRadius="12dp"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Commandes"
                            android:textSize="14sp"
                            android:textColor="#9E9E9E" />

                        <TextView
                            android:id="@+id/text_commandes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#333333"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avis clients"
                            android:textSize="14sp"
                            android:textColor="#9E9E9E" />

                        <TextView
                            android:id="@+id/text_avis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8/5"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FF9800" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Action Buttons -->
        <LinearLayout
            android:id="@+id/action_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_section"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRetirer"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:icon="@drawable/ic_withraw"
                    app:iconTint="#FFFFFF"
                    app:iconSize="24dp"
                    android:contentDescription="Retirer"
                    app:backgroundTint="#FF9800"
                    app:cornerRadius="16dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retirer"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_orders"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:icon="@drawable/ic_document"
                    app:iconTint="#FFFFFF"
                    app:iconSize="24dp"
                    android:contentDescription="Commandes"
                    app:backgroundTint="#2b2b2b"
                    app:strokeColor="#FF9800"
                    app:strokeWidth="2dp"
                    app:cornerRadius="16dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commandes"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_analytics"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:icon="@drawable/ic_analytics"
                    app:iconTint="#FFFFFF"
                    app:iconSize="24dp"
                    android:contentDescription="Statistiques"
                    app:backgroundTint="#2b2b2b"
                    app:strokeColor="#FF9800"
                    app:strokeWidth="2dp"
                    app:cornerRadius="16dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statistiques"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0" />
            </LinearLayout>
        </LinearLayout>

        <!-- Transaction History Section -->
        <LinearLayout
            android:id="@+id/transaction_history_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_buttons"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Historique des transactions"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/see_all_transactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voir tout"
                    android:textSize="14sp"
                    android:textColor="#FF9800"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Transaction Item 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="#333333"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#161616"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ich_money"
                        android:contentDescription="Payment icon"
                        android:background="@drawable/transaction_icon_background"
                        android:backgroundTint="#334CAF50"
                        android:padding="12dp"
                        app:tint="#4CAF50"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paiement reçu"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aujourd'hui, 14:30"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+€ 25.50"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Transaction Item 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="#333333"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#161616"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ich_money"
                        android:contentDescription="Payment icon"
                        android:background="@drawable/transaction_icon_background"
                        android:backgroundTint="#334CAF50"
                        android:padding="12dp"
                        app:tint="#4CAF50"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paiement reçu"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hier, 09:15"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+€ 42.00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Transaction Item 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="#333333">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#161616"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_withraw"
                        android:contentDescription="Withdrawal icon"
                        android:background="@drawable/transaction_icon_background"
                        android:backgroundTint="#33FF5252"
                        android:padding="12dp"
                        app:tint="#FF5252"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retrait vers compte bancaire"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15/04/2025, 11:30"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-€ 500.00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF5252" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Analytics Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/analytics_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/transaction_history_section"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="#333333">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#161616">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statistiques"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <!-- Analytics Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false">

                    <!-- Commandes -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#333333">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="#1D1D1D">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_document"
                                android:contentDescription="Orders icon"
                                android:background="@drawable/icon_background_circle_orange"
                                android:padding="8dp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Commandes"
                                android:textSize="14sp"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Avis -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#333333">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="#1D1D1D">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_star"
                                android:contentDescription="Rating icon"
                                android:background="@drawable/icon_background_circle_orange"
                                android:padding="8dp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avis clients"
                                android:textSize="14sp"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.8/5"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Revenus -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#333333">

                        <LinearLayout
                            android:layout_width="match_parent"
